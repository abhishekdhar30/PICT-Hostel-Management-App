<%-include("navigation")-%>

<link rel="stylesheet" href="css/style.css">



<h1 class="text-center mb-4">Profile !</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-xl-8 col-lg-8 col-md-10 col-sm-12 col-xs-12">


       <!-- error message start -->
       <div class="mb-4 alert-messages">
         <%if(success.length>0){%>
         <div class="alert success">
           <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
           <%=success%>
         </div>
         <%}else{%>
         <%if(danger.length>0){%>
         <div class="alert fail">
           <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
           <%=danger%>
         </div>
         <%}%>
                        <%}%>
       </div>
       <!-- end -->

      <form method="POST" action="/changeprofile">
        <!-- 2 column grid layout with text inputs for the first and last names -->
        <div class="row mb-3">
          <div class="col">
            <div class="form-outline">
               
                
                  <input type="text" id="username" class="form-control" name="username" value="<%=user.username%>" readonly />
                  <label class="form-label" for="username">Email</label>

              
            </div>
          </div>
          <div class="col">
            <div class="form-outline">

                   <%if(Admin=="true"){%>
                   <input type="text" id="name" class="form-control" name="name" value="<%=user.name%>" />
                   <label class="form-label" for="name">Full name</label>
                   <%}else{%>
                      <input type="text" id="name" class="form-control" name="name" value="<%=user.name%>" readonly/>
                      <label class="form-label" for="name">Full name</label>

                   <%}%>
            
            </div>
          </div>
        </div>


        <div class="row mb-3">
          <div class="col">
            <div class="form-outline">

                 <%if(Admin=="true"){%>
              <input type="text" id="contactno" class="form-control" name="contact" value="<%=user.contact%>" />
              <label class="form-label" for="contactno">Contact no</label>

                  <%}else{%>

                      <input type="text" id="contactno" class="form-control" name="contact" value="<%=user.contact%>" readonly />
                      <label class="form-label" for="contactno">Contact no</label>
                  <%}%>
            </div>
          </div>
          <div class="col">
                
                <div class="form-outline">
                      <%if(Admin=="true"){%>
              <input type="text" id="city" class="form-control" name="city" value="<%=user.city%>" />
              <label class="form-label" for="city">City</label>
                    <%}else{%>
                    <input type="text" id="city" class="form-control" name="city" value="<%=user.city%>" readonly />
                    <label class="form-label" for="city">City</label>

                    <%}%>


              </div>
          </div>
        </div>


          <div class="row mb-3">
             <div class="col">
            <div class="form-outline">
              <input type="password" id="password" class="form-control" name="password" />
              <label class="form-label" for="password">Password</label>
            </div>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col">
              <div class="form-outline">
                <input type="password" id="confirmpassword"  class="form-control" name="confirmpassword" />
                <label class="form-label" for="confirmpassword">Confirm Password</label>
              </div>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col">
              <div class="form-outline">
                 <input type="checkbox" onclick="myFunction()"> Show Password
              </div>
            </div>
          </div>
      

          





        <!-- Submit button -->
        <div class="flex">
          <button type="button" class="btnnn mb-4" data-bs-toggle="modal" data-bs-target="#static">Update Profile</button>
          <button type="reset" class="resett mb-4">Reset</button>
        </div>





        <div class="modal fade" tabindex="-1" role="dialog" id="static">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title">Update</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true" data-bs-dismiss="modal">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <p>Are you sure that you have filled all the information correctly ?</p>
              </div>
              <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Update</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              </div>
            </div>
          </div>
        </div>





      </form>

    </div>
  </div>
</div>


<!-- Footer -->
<footer class="sticky-footer bg-white">
  <div class="container my-auto">
    <div class="copyright text-center my-auto">
      <span>Copyright &copy; Abhishek Dhar</span>
    </div>
  </div>
</footer>
<!-- End of Footer -->


