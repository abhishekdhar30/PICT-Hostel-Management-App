<script>

 function myFunction() {
 var x = document.getElementById("password");
 var y = document.getElementById("confirmpassword");
 if (x.type === "password") {
 x.type = "text";
 } else {
 x.type = "password";
 }
 

 if (y.type === "password") {
 y.type = "text";
 } else {
 y.type = "password";
 }

 }


</script>