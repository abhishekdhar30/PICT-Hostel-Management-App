      <!-- Card Header - Dropdown -->
      <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Payment chart</h6>
      </div>
      <!-- Card Body -->
      <div class="card-body">
        <div class="chart-area">



          <div id="container" style="width: 100%; height: 100%"></div>

<div id="totalfee" hidden><%=fee%></div>
<div id="amountpaid" hidden><%=totalpaid%></div>




       <script>
         let totalfee = document.getElementById("totalfee").innerHTML;
         let amountpaid = document.getElementById("amountpaid").innerHTML;
         var data = [{
             x: "Amount to pay",
             value: totalfee-amountpaid,
             normal: {
               
                fill: "#e74a3b"
             }
           },

           {
             x: "Amount paid",
             value: amountpaid,
             normal: {
               fill: "#1cc88a"
             }
           },
          

         ];


         // create the chart
         var chart = anychart.pie();

         // set the chart title
         chart.title("Records");

         // add the data
         chart.data(data);

         // display the chart in the container
         chart.container('container');
         chart.draw();
       </script>





        </div>
      </div>
    </div>
  </div>



